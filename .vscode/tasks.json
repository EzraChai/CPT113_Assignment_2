{ 
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build with MSYS2 g++",
      "type": "shell",
      "command": "C:/msys64/ucrt64/bin/g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "main.cpp",
        "StudentProfilesManagement.cpp",
        "StudentProfile.cpp",
        "StudyGroup.cpp",
        "Undo.cpp",
        "-o",
        "${workspaceFolder}/main.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build C++ using MSYS2 g++"
    }
  ]
}
